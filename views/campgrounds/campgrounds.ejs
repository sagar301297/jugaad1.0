<% include ../partials/header.ejs %>
  <h1>Campgrounds</h1>


  <header class="jumbotron pb-1">
    <div class="container">

    <h1 class="display-4">Welcome to My Camp</h1>
    <p class="lead">Find your camp destination here.</p>
    <hr class="my-4">
    <p>
      <a class="btn btn-primary btn-lg" role="button"
      href="/campgrounds/new">Add new Campgrounds</a>
    </p>
  </div>

  </header>

  <div class="row">
  <% for(var i = 0 ; i<campgrounds.length; i++){%>
    <div class="col-md-3 col-sm-6">
      <div class="card mb-1">
        <img  class="card-img-top" src="<%=campgrounds[i].image%>" height="180em">
  <div class="card-body">
    <h5 class="card-title text-center"><%=campgrounds[i].name%></h5>
    <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> -->
    <a href="/campgrounds/show/<%=campgrounds[i]._id%>" class="btn btn-primary btn-block">Show more</a>
  </div>
</div>

    </div>

  <%}%>
  </div>

<% include ../partials/footer.ejs %>
